{
  "name": "user-service",
  "version": "0.0.0",
  "description": "User Service",
  "main": "./build/server.js",
  "scripts": {
    "pm2:start": "npm run build:clean && pm2 start npm --name=\"USER SERVICE\" -- start",
    "pm2:restart": "pm2 restart \"USER SERVICE\"",
    "pm2:delete": "pm2 delete \"USER SERVICE\"",
    "start": "cross-env NODE_ENV=PROD node --no-warnings ./build/server.js",
    "dev": "nodemon --ext js,ts --exec ts-node -r tsconfig-paths/register -- ./src/server.ts",
    "build": "npx tsc",
    "build:clean": "rimraf build && npx tsc",
    "lint": "eslint --fix . --ext .ts",
    "copy-env": "cp .env.sample .env",
    "prepare:husky": "husky install && npx husky add .husky/pre-commit \"npm run lint && npx pretty-quick --staged\""
  },
  "author": "PreetamSing",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.4.0",
    "@apollo/subgraph": "^2.3.2",
    "@graphql-tools/merge": "^8.2.1",
    "@sendgrid/mail": "^7.6.0",
    "bcrypt": "^5.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "twilio": "^4.7.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.177",
    "@types/node": "18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.5.2"
  },
  "_moduleAliases": {
    "@schemas": "build/schemas",
    "@modules": "build/modules",
    "@models": "build/models",
    "@config": "build/core/config",
    "@core": "build/core",
    "@mail": "build/mails",
    "@middlewares": "build/middlewares",
    "@helpers": "build/helpers",
    "@jobs": "build/jobs"
  }
}
